'use strict';

const fs = require('fs');

class Lang {
	constructor(lang){
		this.lang = lang;
		this.err = false;
		try{
			this.file = require(`./locals/${lang}.dir`); // TODO: normalize 
		}case(e){
			this.err = e;
			throw new Error('Failed to open lang file;');
		}
	}

	translate(id = null){
		return this.file[id] || id;
	}

	static translate(id, lang){
		return (new Lang(lang)).translate(id);
	}

}

module.exports = Lang;
